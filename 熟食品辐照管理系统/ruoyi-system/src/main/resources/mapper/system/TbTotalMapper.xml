<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.TbTotalMapper">
    
    <resultMap type="TbTotal" id="TbTotalResult">
        <result property="id"    column="id"    />
        <result property="radiNo"    column="radi_no"    />
        <result property="goodsName"    column="goods_name"    />
        <result property="goodsNo"    column="goods_no"    />
        <result property="goodsDime"    column="goods_dime"    />
        <result property="guestName"    column="guest_name"    />
        <result property="singleWeight"    column="single_weight"    />
        <result property="inNum"    column="in_num"    />
        <result property="outNum"    column="out_num"    />
        <result property="total"    column="total"    />
        <result property="inDate"    column="in_date"    />
        <result property="outDate"    column="out_date"    />
        <result property="inMan"    column="in_man"    />
        <result property="outMan"    column="out_man"    />
        <result property="note1"    column="note1"    />
        <result property="note2"    column="note2"    />
        <result property="note3"    column="note3"    />
    </resultMap>

    <sql id="selectTbTotalVo">
        select id, radi_no, goods_name, goods_no, goods_dime, guest_name, single_weight, in_num, out_num, total, in_date, out_date, in_man, out_man, note1, note2, note3 from tb_total
    </sql>

    <select id="selectTbTotalList" parameterType="TbTotal" resultMap="TbTotalResult">
        <include refid="selectTbTotalVo"/>
        <where>  
            <if test="radiNo != null  and radiNo != ''"> and radi_no = #{radiNo}</if>
        </where>
    </select>
    <select id="selectTbTotal" parameterType="TbTotal" resultMap="TbTotalResult">
        <include refid="selectTbTotalVo"/>
        <where>
            <if test="radiNo != null  and radiNo != ''"> and radi_no = #{radiNo}</if>
            <if test="guestName != null  and guestName != ''"> and guest_name = #{guestName}</if>
        </where>
    </select>
    <select id="selectTbTotalById" parameterType="Long" resultMap="TbTotalResult">
        <include refid="selectTbTotalVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertTbTotal" parameterType="TbTotal" useGeneratedKeys="true" keyProperty="id">
        insert into tb_total
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="radiNo != null and radiNo != ''">radi_no,</if>
            <if test="goodsName != null and goodsName != ''">goods_name,</if>
            <if test="goodsNo != null and goodsNo != ''">goods_no,</if>
            <if test="goodsDime != null and goodsDime != ''">goods_dime,</if>
            <if test="guestName != null and guestName != ''">guest_name,</if>
            <if test="singleWeight != null">single_weight,</if>
            <if test="inNum != null">in_num,</if>
            <if test="outNum != null">out_num,</if>
            <if test="total != null">total,</if>
            <if test="inDate != null">in_date,</if>
            <if test="outDate != null">out_date,</if>
            <if test="inMan != null and inMan != ''">in_man,</if>
            <if test="outMan != null and outMan != ''">out_man,</if>
            <if test="note1 != null">note1,</if>
            <if test="note2 != null">note2,</if>
            <if test="note3 != null">note3,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="radiNo != null and radiNo != ''">#{radiNo},</if>
            <if test="goodsName != null and goodsName != ''">#{goodsName},</if>
            <if test="goodsNo != null and goodsNo != ''">#{goodsNo},</if>
            <if test="goodsDime != null and goodsDime != ''">#{goodsDime},</if>
            <if test="guestName != null and guestName != ''">#{guestName},</if>
            <if test="singleWeight != null">#{singleWeight},</if>
            <if test="inNum != null">#{inNum},</if>
            <if test="outNum != null">#{outNum},</if>
            <if test="total != null">#{total},</if>
            <if test="inDate != null">#{inDate},</if>
            <if test="outDate != null">#{outDate},</if>
            <if test="inMan != null and inMan != ''">#{inMan},</if>
            <if test="outMan != null and outMan != ''">#{outMan},</if>
            <if test="note1 != null">#{note1},</if>
            <if test="note2 != null">#{note2},</if>
            <if test="note3 != null">#{note3},</if>
         </trim>
    </insert>

    <update id="updateTbTotal" parameterType="TbTotal">
        update tb_total
        <trim prefix="SET" suffixOverrides=",">
            <if test="radiNo != null and radiNo != ''">radi_no = #{radiNo},</if>
            <if test="goodsName != null and goodsName != ''">goods_name = #{goodsName},</if>
            <if test="goodsNo != null and goodsNo != ''">goods_no = #{goodsNo},</if>
            <if test="goodsDime != null and goodsDime != ''">goods_dime = #{goodsDime},</if>
            <if test="guestName != null and guestName != ''">guest_name = #{guestName},</if>
            <if test="singleWeight != null">single_weight = #{singleWeight},</if>
            <if test="inNum != null">in_num = #{inNum},</if>
            <if test="outNum != null">out_num = #{outNum},</if>
            <if test="total != null">total = #{total},</if>
            <if test="inDate != null">in_date = #{inDate},</if>
            <if test="outDate != null">out_date = #{outDate},</if>
            <if test="inMan != null and inMan != ''">in_man = #{inMan},</if>
            <if test="outMan != null and outMan != ''">out_man = #{outMan},</if>
            <if test="note1 != null">note1 = #{note1},</if>
            <if test="note2 != null">note2 = #{note2},</if>
            <if test="note3 != null">note3 = #{note3},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTbTotalById" parameterType="Long">
        delete from tb_total where id = #{id}
    </delete>

    <delete id="deleteTbTotalByIds" parameterType="String">
        delete from tb_total where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>